<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="354dp"
        android:layout_height="178dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        app:cardBackgroundColor="@color/cardview_shadow_end_color"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    <TextView
        android:id="@+id/txtVName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintVertical_bias="0.039"

        android:textSize="19dp"

        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtVStoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Story Title"
        app:layout_constraintTop_toBottomOf="@+id/txtVName"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintVertical_bias="0.016"

        android:layout_marginTop="33dp"
        android:layout_marginLeft="5dp"
        android:textSize="17dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:textColor="@color/black"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/txtVStoryDesc"
        android:text="Story Description"

        app:layout_constraintTop_toBottomOf="@+id/txtVStoryTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintVertical_bias="0.007"
        android:layout_marginTop="77dp"
        android:layout_marginLeft="12dp"
        android:lineSpacingExtra="2.5dp"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:textSize="18dp"
        android:textColor="@color/gray"/>

    <TextView
        android:id="@+id/txtVViewMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="7dp"
        app:layout_constraintTop_toBottomOf="@+id/txtVStoryDesc"
        app:layout_constraintHorizontal_bias="0.974"
        app:layout_constraintVertical_bias="0.039"
        android:text="...Read More"
        android:textSize="15dp"
        android:textColor="@color/blue"
        android:layout_marginLeft="263dp"
        android:layout_marginTop="155dp"/>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>